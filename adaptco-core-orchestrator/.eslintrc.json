{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {},
  "overrides": [
    {
      "files": ["src/bin/**/*.js"],
      "rules": {
        "no-restricted-properties": [
          "error",
          {
            "object": "Math",
            "property": "random",
            "message": "Math.random() is disallowed in deterministic runtime surfaces."
          }
        ]
      }
    }
  ]
}
